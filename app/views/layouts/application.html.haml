!!! 5
%html
  %head
    = csrf_meta_tag
    = stylesheet_link_tag 'application.css', :media => :all
    = javascript_include_tag 'application.js'
    = yield(:head)
  %body.word_games
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.brand.pjax{:href => root_path}= 'Word Games'
          .nav-collapse
            = render :partial => 'layouts/navbar'
    .container-fluid
      .row-fluid
        .span2
          .well.sidebar-nav
            = render :partial => 'layouts/sidebar'
        .span10
          .row-fluid
            .content{:'data-pjax-container' => true}
              = render :template => 'layouts/pjax'